<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="EverlanceTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryEv</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkEv</item>
        <item name="colorAccent">@color/colorAccentEv</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:buttonStyle">@style/EverlanceButtonStyle</item>
        <item name="android:borderlessButtonStyle">@style/EverlanceBorderlessButtonStyle</item>
    </style>

    <style name="EverlanceButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:minWidth">@dimen/square_button_min_width</item>
        <item name="android:height">@dimen/square_button_min_height</item>
    </style>

    <style name="EverlanceBorderlessButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:minWidth">@dimen/square_button_min_width</item>
        <item name="android:height">@dimen/square_button_min_height</item>
    </style>

    <style name="SignUpTheme" parent="EverlanceTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="android:windowBackground">@color/colorPrimaryEv</item>
    </style>

    <style name="EverlanceTheme.Transparent" parent="EverlanceTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/background_black</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="grey_button" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">#FFFFFF</item>
    </style>
</resources>