<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/xxxsmall_margin"
    android:paddingBottom="@dimen/xxsmall_margin">

    <View
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:baselineAligned="false"
        android:id="@+id/swipe_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:tag="Bottom3"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/ll_medical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/pie_chart_orange"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_medical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_heart_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/str_medical"
                android:textColor="@android:color/white"
                android:textSize="@dimen/medium_text_size" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_personal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/pie_chart_blue"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_personal_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/str_personal"
                android:textColor="@android:color/white"
                android:textSize="@dimen/medium_text_size" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_charity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/pie_chart_orange"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_charity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_heart_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/str_charity"
                android:textColor="@android:color/white"
                android:textSize="@dimen/medium_text_size" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>