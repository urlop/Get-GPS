<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_cv_message_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/xxxlarge_margin"
    android:paddingRight="@dimen/xxxlarge_margin"
    android:paddingBottom="@dimen/xxxlarge_margin"
    android:paddingTop="@dimen/small_margin"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_message_height">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:weightSum="5">

            <ImageView
                android:id="@+id/iv_cv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_undo_green"
                android:layout_marginBottom="@dimen/large_margin"/>

            <TextView
                android:id="@+id/tv_cv_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto Classify WORK is ON"
                android:textSize="@dimen/cv_text_size"
                android:textColor="@color/colorPrimaryEv"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_cv_message_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See your new trips in the ALL tab"
                android:textSize="@dimen/medium_text_size"
                tools:ignore="HardcodedText"
                android:layout_marginTop="@dimen/xsmall_margin"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>