<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/button_classify_radius" />
            <solid android:color="@color/pie_chart_grey" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/button_classify_radius" />
            <solid android:color="@color/pie_chart_blue" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/button_classify_radius" />
            <solid android:color="@color/btn_default_gray" />
        </shape>
    </item>
</selector>
